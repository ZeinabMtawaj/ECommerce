	<script type="text/javascript" >




        
		$.ajax({
			type:"GET",
			url: '@(Url.Action("getAll","Category"))',
			dataType:"json",
			success:function(result){
                if (result != null){
                    var i = 0;
                    var j = 0;
				    $.each(result,function(key,value){
                        if (i==0){
                             $('#categories').append("<div class='col-md-3' id='sec-"+i+"'> </div>");
                             j=i;
                        }
                        if (((i%6) ==0) && (i!=0)){
                            $('#categories').append("<div class='col-md-3 d-none d-md-block' id='sec-"+i+"'></div>");  
                            j=i;
                        }
                        $('#sec-'+j).append("<a class='dropdown-item rounded border-bottom cats' value='"+value.image+"' href='#'>"+value.name+"</a>");

                        i= i+1;
                    });
                    	
               
                }

                $('#categories').append("<div class='col-md-6 d-none d-md-block'><a class='h-100 w-100 rounded img' href='#' id='cat-img' style='background-image: url(img/more-services-1.jpg);'></a></div>");   
                 eventForChangeImage();  
                    
                        

			},
			error: function(req, status, error){
			console.log(status);
			}
            });



            function eventForChangeImage(){

               $('.cats').hover(function(event){
                 let val =$(event.target).attr('value');
                 $('#cat-img') .css("background-image", "url(" + val + ")");
                  });








            }





    </script>
