
@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_StandardLayout.cshtml";
	string EmailErrMsg = ViewBag.EmailErrMsg;
	string PasswordErrMsg = ViewBag.PasswordErrMsg;
	
}

@model UserLoginVM


<div class="limiter mt-18">
	<div class="container-login100 ">
		<div class="wrap-login100 shadow mt-20">
			<div class="login100-pic js-tilt" data-tilt>
				<img src="~/img/Login.png" alt="LogIn">
			</div>

			<form class="login100-form validate-form" method="post" asp-action="Login">
				<span class="login100-form-title">
					Member Login
				</span>

				<div class="wrap-input100 validate-input" data-validate = "@EmailErrMsg">
					<input class="input100" type="text" asp-for="Email" placeholder="Email">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa fa-envelope" aria-hidden="true"></i>
					</span>
				</div>

				<div class="wrap-input100 validate-input" data-validate = "@PasswordErrMsg">
					<input class="input100" type="password" asp-for="Password" placeholder="Password">
					<span class="focus-input100"></span>
					<span class="symbol-input100">
						<i class="fa fa-lock" aria-hidden="true"></i>
					</span>
				</div>
					
				<div class="container-login100-form-btn">
					<button class="login100-form-btn">
						Login
					</button>
				</div>

				<div class="text-center p-2">
					<span class="txt1">
						Forgot
					</span>
					<a class="txt2" href="#">
						Username / Password?
					</a>
				</div>

				<div class="text-center p-5">
					<a class="txt2" asp-action="Register" asp-controller="User">
						Create your Account
						<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
					</a>
				</div>
			</form>
		</div>
	</div>
</div>