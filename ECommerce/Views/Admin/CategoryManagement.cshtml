
@{
    ViewData["Title"] = "CategoryManagement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<CategoryViewModel> 




<h1>Category Management</h1>




 <a asp-controller="Product" asp-action= "Create"> <i class="btn btn-success btn-sm">Create</i> </a>

@if(Model != null && Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Borrower
                    </th>
                    <th>
                        Lender
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var category in Model)
                {
                    <tr>
                        <td width="@(100.0 / Model.Count())%">@category.Name</td>
                        <td width="@(100.0 / Model.Count())%">@category.Image</td>
                        <td width="@(100.0 / Model.Count())%">@category.Description</td>
                        <td width="@(100.0 / Model.Count())%">@category.CreatedAt</td>
                        <td width="@(100.0 / Model.Count())%">@category.UpdatedAt</td>
                    </tr>
                }
            </tbody>
        </table> 
}
else{
    <p> No Categories Yet</p>
}