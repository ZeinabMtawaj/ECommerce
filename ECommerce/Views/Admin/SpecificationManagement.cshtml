
@{
    ViewData["Title"] = "SpecificationManagement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model IEnumerable<SpecificationViewModel> 


		

<h1>SpecificationManagement</h1>




<div>
	<!-- Button -->
	<div class="d-flex justify-content-center mt-3">
		<button class="btn btn-primary btn-round mb-3" data-toggle="modal" data-target="#addRowModal">
			<i class="fa fa-plus"></i>
			Create
		</button>
	</div>

	
		<!-- Table -->
		<div class="table-responsive">
			<table id="add-row" class="display table table-striped table-hover text-center" cellspacing="0" width="100%">
				<thead>
					<tr>
						@foreach(var col in ViewBag.cols){
							<th>@col</th>
						}
						<th>Action</th>
					</tr>
				</thead>
				<tfoot>
					<tr></tr>
				</tfoot>
				<tbody>
					<tr>
						
					@if (true)
					{
						<td>HI</td>

						<td>
							<div class="form-button-action">
								<button type="button" data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-link btn-simple-primary btn-lg" data-original-title="Edit Task">
									<i class="fa fa-edit"></i>
								</button>
								<button type="button" data-toggle="tooltip" data-placement="top" title="Remove" class="btn btn-link btn-simple-danger" data-original-title="Remove">
									<i class="fa fa-times"></i>
								</button>
							</div>
						</td>
					}
					else
					{
						<p>No Data Found</p>
					}
				</tr>
				</tbody>
			</table>
		</div>
		<script>
			$('#add-row').DataTable({
				"pageLength": 5,
			});
		</script>

	

	

</div>