
@{
    ViewData["Title"] = "EditSpecifiction";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model SpecificationViewModel



<div class="d-flex flex-row text-right">

    <nav aria-label="breadcrumb" class="absolute right-0">
	    <ol class="breadcrumb bg-white">
            <li class="breadcrumb-item text-base" ><a  asp-action="Index" asp-controller="Specification" style="color:#1572e8" >Specifications</a></li>
		    <li class="breadcrumb-item active text-base" aria-current="page">Edit Specification</li>
	    </ol>
    </nav>
</div>


<div class="card-body">
    <h3 class="card-title mt-2 font-bold text-lg">Edit Specification</h3>
    <form class="mt-4" method="post" asp-action="Edit">
        <div class="row mb-3 mt-4 ml-4">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row-sm-10 d-flex flex-row mt-12">
            <button type="button" class="btn btn-outline-danger ml-5" onclick="location.href='@Url.Action("Index","Specification")';">Cancel</button>
            <input type="submit" class="btn btn-primary ml-5" value="Edit">
        </div>
    </form>
</div>