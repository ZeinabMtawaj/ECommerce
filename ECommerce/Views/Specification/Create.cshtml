
@{
    ViewData["Title"] = "CreateSpecification";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model SpecificationViewModel


<div class="card-body">
     <h3 class="card-title mt-2  font-bold text-lg">Create New Specification</h3>
    <form class="mt-4" method="post" asp-action="Create">
        <div class="row mb-3 mt-4 ml-4">
            <label asp-for="Name" class="col-sm-2 col-form-label font-weight-bold"></label>
            <div class="col-sm-10">
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row-sm-10 d-flex flex-row mt-12">
            <button type="button" class="btn btn-outline-danger ml-5" onclick="location.href='@Url.Action("Index","Specification")';">Cancel</button>
            <input type="submit" class="btn btn-primary ml-5" value="Create">
        </div>
    </form>
</div>
